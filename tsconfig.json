{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "skipLibCheck": true
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": [
    "client",
    "node_modules",
    "vite.config.ts",
    "server/vite.ts",
    "**/*.test.ts",
    "dist",
    "*.config.*"
  ]
}
