{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": [
    "client",
    "node_modules",
    "vite.config.ts",
    "**/*.test.ts",
    "dist",
    "*.config.*"
  ]
}
